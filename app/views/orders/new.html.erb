<p>Place Order for:
<%= @product.name %>

</p>
<%= form_with(model: @order, local: true) do |f| %>

  <%= render 'shared/error_messages' %>
  <%= hidden_field_tag :product, @product.id %>

  <%= f.label :first_name %>
  <%= f.text_field :first_name %><br>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %><br>

  <%= f.label :address_street %>
  <%= f.text_field :address_street %><br>

  <%= f.label :address_city %>
  <%= f.text_field :address_city %><br>

  <%= f.label :address_state %>
  <%= f.text_field :address_state %><br>

  <%= f.label :address_zip %>
  <%= f.text_field :address_zip %><br>

  <%= f.label :email %>
  <%= f.text_field :email %><br>

  <%= f.label :phone_number %>
  <%= f.text_field :phone_number %><br>

  <%= f.submit "Place Order" %>
<% end %>


